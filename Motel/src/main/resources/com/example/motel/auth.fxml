<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" style="-fx-background-color: #222a35;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.motel.AuthController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <children>
      <Label alignment="CENTER" prefHeight="35.0" prefWidth="139.0" text="Motel" textFill="#f54b64">
         <font>
            <Font name="DaMiOne" size="30.0" />
         </font>
      </Label>
      <TextField fx:id="loginText" alignment="CENTER" promptText="Логин" style="-fx-border-color: #41313a; -fx-background-radius: 10px; -fx-border-radius: 10px;" />
      <PasswordField fx:id="passText" alignment="CENTER" promptText="Пароль" style="-fx-border-color: #41313a; -fx-background-radius: 10px; -fx-border-radius: 10px;" />
      <Button fx:id="Join" mnemonicParsing="false" onAction="#clickJoin" prefHeight="29.0" prefWidth="71.0" style="-fx-background-color: #4e586e; -fx-border-color: #41313a; -fx-background-radius: 10px; -fx-border-radius: 10px;" text="Вход" textFill="#41313a">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor></Button>
      <Button mnemonicParsing="false" onAction="#clickExit" style="-fx-background-color: #4e586e; -fx-border-color: #41313a; -fx-background-radius: 10px; -fx-border-radius: 10px;" text="Выход" textFill="#41313a">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor></Button>
      <Label fx:id="linkReg" onMouseClicked="#clickLinkReg" text="Регистрация" textFill="WHITE" underline="true" />
   </children>
</VBox>
